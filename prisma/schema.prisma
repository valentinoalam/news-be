generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model BackLink {
  id        String   @id @default(uuid())
  userId    String
  url       String
  source    String?
  referrer  String?
  createdAt DateTime @default(now())
}

model Session {
  id            String   @id @default(uuid())
  sessionToken  String?   @unique
  userId        String
  expires       DateTime?
  startTime     DateTime
  endTime       DateTime?
  duration      Float?    // in seconds
  deviceType    String?
  location      String?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String           @id @default(uuid())
  provider        String
  providerAccId   String?          @unique
  email           String           @unique
  name            String
  password        String?
  profile         Profile?
  role            Role            @default(SUBSCRIBER)


  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  articles        Article[]
  comments        Comment[]
  subscriptions   NewsletterSubscription[]
  analyticsEvents AnalyticsEvent[]
  sessions Session[]
  likes Like[]
  articleViews View[]

  @@map("users")
  @@index([createdAt])

}

model Profile {
  bio         String?  @db.Text
  avatar      String?
  socialMedia Json?
  userId      String   @id @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("profiles")
  @@index([createdAt])
}
model AnalyticsEvent {
  id          String   @id @default(uuid())
  eventType   String
  payload     Json
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  articleId   Int?
  article     Article? @relation(fields: [articleId], references: [id])
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@map("analytics_events")
}

enum ArticleStatus {
  Draft
  Published
  Archived
}
model Article {
  id            Int    @id @default(autoincrement())
  categoryId    Int
  title         String
  slug          String           @unique
  coverImageId  String?          @unique
  excerpt       String?          @db.Text
  content       String
  html          String?            
  authorId      String
  author        User             @relation(fields: [authorId], references: [id])
  category      Category         @relation(fields: [categoryId], references: [id])
  status        ArticleStatus    @default(Draft) 
  clickTimes    Int              @default(0)
  views         View[]
  shares        Share[]   
  likes         Like[]
  comments      Comment[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime?         @updatedAt
  publishedAt   DateTime?
  updatedById   String?
  metadata      ArticleMetadata?
  revisions     ArticleRevision[]
  mediaItems    MediaItem[]
  analytics     AnalyticsEvent[]

  @@map("articles")
  @@index([authorId])
  @@index([categoryId])
}
model View {
  articleId Int   
  article   Article  @relation(fields: [articleId], references: [id])
  userId    String   
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  @@id([articleId, userId]) // Composite primary key
  @@index([articleId]) // Index for faster queries by articleId
  @@index([userId])    // Index for faster queries by userId
  @@index([createdAt])
}

model Like {
  userId       String       
  articleId    Int
  user         User        @relation(fields: [userId], references: [id])
  article      Article     @relation(fields: [articleId], references: [id])
  createdAt    DateTime @default(now())

  @@id([articleId, userId]) // Composite primary key
  @@index([articleId]) // Index for faster queries by articleId
  @@index([userId])    // Index for faster queries by userId
}

enum SocialShare {
  Facebook
  Whatsapp
  Twitter
}

model Share {
  id            String   @id @default(uuid())
  articleId     Int   
  article       Article     @relation(fields: [articleId], references: [id])

  createdAt     DateTime @default(now())
  @@index([createdAt])
  @@index([articleId])

}

model ArticleRevision {
  articleId   Int   
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  title       String
  content     String
  excerpt     String?  @db.Text
  version     Int
  createdAt   DateTime @default(now())
  createdBy   String?
  changeLog   String?  @db.Text

  @@id([articleId, version])
  @@index([articleId])
  @@map("article_revisions")
}
model ArticleMetadata {
  articleId   Int   @id @unique 
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  author      String[]
  seoTitle    String?
  abstract    String?  @db.Text
  keywords    Tag[] @relation("ArticleTags")
  readingTime Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt

  @@index([articleId])
  @@map("article_metadata")
}

model Tag {
  id          Int    @id @default(autoincrement())
  name        String    @unique
  articles    ArticleMetadata[] @relation("ArticleTags")
  createdAt   DateTime  @default(now())
  @@index([name])
  @@map("tags")
}

model Category {
  id                      Int    @id @default(autoincrement())
  name                    String                   @unique
  slug                    String                   @unique
  description             String?                  @db.Text
  articles                Article[]
  parentId                Int?                  
  parent                  Category?                @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children                Category[]               @relation("CategoryHierarchy")
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime?                @updatedAt
  newsletterSubscription  NewsletterSubscription[]

  @@map("categories")
  @@index([parentId])
}

model Comment {
  id        String    @id @default(uuid())
  content   String    @db.Text
  articleId Int    
  article   Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)
  authorId  String    
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parentId  String?   
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("comments")
  @@index([articleId, parentId, createdAt])
  @@index([authorId])
}

model MediaItem {
  id          String    @id @default(uuid())
  sessionId   String?    
  articleId   Int?    
  index       Int?
  fileName    String
  fileSize    Int
  mimeType    String
  url         String
  alt         String?
  caption     String?   @db.Text
  articles    Article?   @relation(fields: [articleId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?  @updatedAt

  @@map("media_items")
}

model NewsletterSubscription {
  id          String    @id @default(uuid())
  email       String    @unique
  userId      String?   
  user        User?     @relation(fields: [userId], references: [id])
  status      SubscriptionStatus @default(ACTIVE)
  categories  Category[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  verified    Boolean @default(false)
  verificationToken String? @unique
  verificationTokenExpiresAt DateTime?
  @@map("newsletter_subscriptions")
}

enum Role {
  ADMIN
  EDITOR
  AUTHOR
  SUBSCRIBER
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PENDING
  UNSUBSCRIBED
}