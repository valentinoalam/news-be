generator client {
  provider = "prisma-client-js"
}
generator nestjsDto {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "./generated/dto"
  outputToNestJsResourceStructure = "true"
  flatResourceStructure           = "false"
  exportRelationModifierClasses   = "true"
  reExport                        = "true"
  generateFileTypes               = "all"
  createDtoPrefix                 = "Create"
  updateDtoPrefix                 = "Update"
  dtoSuffix                       = "Dto"
  entityPrefix                    = ""
  entitySuffix                    = ""
  classValidation                 = "true"
  fileNamingStyle                 = "camel"
  noDependencies                  = "false"
  outputType                      = "class"
  definiteAssignmentAssertion     = "false"
  requiredResponseApiProperty     = "true"
  prettier                        = "true"
  outputApiPropertyType           = "true"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model PageView {
  id        String   @id @default(uuid())
  userId    String
  url       String
  source    String?
  referrer  String?
  createdAt DateTime @default(now())
}

model Session {
  id            String   @id @default(uuid())
  sessionToken  String?   @unique
  userId        String
  expires       DateTime?
  startTime     DateTime
  endTime       DateTime?
  duration      Float?    // in seconds
  deviceType    String?
  location      String?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String           @id @default(uuid())
  provider        String
  providerAccId   String?          @unique
  email           String           @unique
  name            String
  password        String?
  profile         Profile?
  role            Role            @default(SUBSCRIBER)


  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  articles        Article[]
  comments        Comment[]
  subscriptions   NewsletterSubscription[]
  analyticsEvents AnalyticsEvent[]

  @@map("users")
  sessions Session[]
  likes Like[]
  articleViews View[]
}

model Profile {
  id          String   @id @default(uuid())
  bio         String?  @db.Text
  avatar      String?
  socialMedia Json?
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("profiles")
}
model AnalyticsEvent {
  id          String   @id @default(uuid())
  eventType   String
  payload     Json
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  articleId   String?
  article     Article? @relation(fields: [articleId], references: [id])
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@map("analytics_events")
}

enum ArticleStatus {
  Draft
  Published
  Archived
}
model Article {
  id            String           @id @default(uuid())
  categoryId    String
  title         String
  slug          String           @unique
  coverImageId  String?          @unique
  excerpt       String?          @db.Text
  content       String
  html          String?            
  authorId      String
  author        User             @relation(fields: [authorId], references: [id])
  category      Category         @relation(fields: [categoryId], references: [id])
  status        ArticleStatus    @default(Draft) 
  clickTimes    Int              @default(0)
  views          View[]
  shares        Share[]   
  likes         Like[]
  comments      Comment[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime?         @updatedAt
  publishedAt   DateTime?
  updatedById   String?
  metadata      ArticleMetadata?
  revisions     ArticleRevision[]
  mediaItems    MediaItem[]
  analytics     AnalyticsEvent[]

  @@map("articles")


}
model View {
  id        String   @id @default(uuid())
  articleId    String   @db.Char(36)
  article   Article     @relation(fields: [articleId], references: [id])
  userId    String   @db.Char(36)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
model Like {
  id           String      @id @default(uuid())
  userId       String       @db.Char(36)
  articleId    String
  user         User        @relation(fields: [userId], references: [id])
  article      Article     @relation(fields: [articleId], references: [id])
  createdAt    DateTime @default(now())

  @@unique([articleId, userId])
}

enum SocialShare {
  Facebook
  Whatsapp
  Twitter
}

model Share {
  id            String   @id @default(uuid())
  articleId     String   @db.Char(36)
  article       Article     @relation(fields: [articleId], references: [id])

  createdAt     DateTime @default(now())
}

model ArticleRevision {
  id          String   @id @default(uuid())
  articleId   String   @db.Char(36)
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  title       String
  content     Json
  excerpt     String?  @db.Text
  version     Int
  createdAt   DateTime @default(now())
  createdBy   String?
  changeLog   String?  @db.Text

  @@unique([articleId, version])
  @@map("article_revisions")
}
model ArticleMetadata {
  id          String   @id @default(uuid())
  articleId   String   @unique @db.Char(36)
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  author      String[]
  seoTitle    String?
  abstract    String?  @db.Text
  keywords    Tag[]
  readingTime Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("article_metadata")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String    @unique
  description String?   @db.Text
  articles    Article[]
  parentId    String?   @db.Char(36)
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  newsletterSubscription NewsletterSubscription[]
  @@map("categories")
}

model Tag {
  id          String    @id @default(uuid())
  name        String    @unique
  articles    ArticleMetadata[]
  createdAt   DateTime  @default(now())
  @@map("tags")
}

model Comment {
  id        String    @id @default(uuid())
  content   String    @db.Text
  articleId String    @db.Char(36)
  article   Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)
  authorId  String    @db.Char(36)
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parentId  String?   @db.Char(36)
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("comments")
}

model MediaItem {
  id          String    @id @default(uuid())
  sessionId   String?    @db.Char(36)
  articleId   String?    @db.Char(36)
  index       Int?
  fileName    String
  fileSize    Int
  mimeType    String
  url         String
  alt         String?
  caption     String?   @db.Text
  articles    Article?   @relation(fields: [articleId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?  @updatedAt

  @@map("media_items")
}

model NewsletterSubscription {
  id          String    @id @default(uuid())
  email       String    @unique
  userId      String?   @db.Char(36)
  user        User?     @relation(fields: [userId], references: [id])
  status      SubscriptionStatus @default(ACTIVE)
  categories  Category[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  verified    Boolean @default(false)
  verificationToken String? @unique
  verificationTokenExpiresAt DateTime?
  @@map("newsletter_subscriptions")
}

enum Role {
  ADMIN
  EDITOR
  AUTHOR
  SUBSCRIBER
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PENDING
  UNSUBSCRIBED
}